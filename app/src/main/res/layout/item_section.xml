<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginVertical="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivColorBorderSelect"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_border_edit_color_select"/>
    <androidx.cardview.widget.CardView
        android:layout_width="28.91dp"
        android:layout_height="28.91dp"
        app:cardCornerRadius="14.45dp"
        app:layout_constraintBottom_toBottomOf="@id/ivColorBorder"
        app:layout_constraintEnd_toEndOf="@id/ivColorBorder"
        app:layout_constraintStart_toStartOf="@id/ivColorBorder"
        app:layout_constraintTop_toTopOf="@id/ivColorBorder">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivColorEdit"
            android:layout_width="28.91dp"
            android:layout_height="28.91dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/ivColorBorder"
            app:layout_constraintEnd_toEndOf="@id/ivColorBorder"
            app:layout_constraintStart_toStartOf="@id/ivColorBorder"
            app:layout_constraintTop_toTopOf="@id/ivColorBorder" />
        <ImageView
            android:layout_width="28.91dp"
            android:layout_height="28.91dp"
            app:layout_constraintBottom_toBottomOf="@id/ivColorBorder"
            app:layout_constraintEnd_toEndOf="@id/ivColorBorder"
            app:layout_constraintStart_toStartOf="@id/ivColorBorder"
            app:layout_constraintTop_toTopOf="@id/ivColorBorder"
            android:src="@drawable/img_face_color"/>


    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/ivColorBorder"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_edit_color_"/>
    <EditText
        android:id="@+id/edtSectionName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/ivColorBorder"
        app:layout_constraintEnd_toStartOf="@id/ivDeleteSection"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/option"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:fontFamily="@font/svn_gilroy"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/img_border_edt_section"/>
    <ImageView
        android:id="@+id/ivDeleteSection"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_delete_section"/>



</androidx.constraintlayout.widget.ConstraintLayout>